;; test of shared-initialize(defclass master ()  ((instances :allocation :class               :initform nil              :accessor all-instances)))(defclass slave (master)  ((name :accessor slave-name         :initarg :name)))(defmethod shared-initialize :after            ((obj slave) slot-names &rest args)  ;; (declare (ignore slot-names))  (format t "Args: ~A~%Slot-names: ~a~%" args slot-names)  (if (not (slot-boundp obj 'name))    (setf (slave-name obj) (gensym "SLAVE")))  (set (slave-name obj) obj)  (push obj (all-instances obj)))