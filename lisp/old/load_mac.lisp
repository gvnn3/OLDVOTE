(in-package common-lisp-user);;;;    -------------------------------------------------------------;;;;;;;;    Table of Contents:;;;;    ;;;;    1. definition of ELSE constant;;;;    ;;;;    2. loads file containing definition of MY-LOAD (smart loader);;;;    ;;;;    3. defines portable pathnames;;;;    ;;;;    4. loads all the standard stuff;;;;    ;;;;    -------------------------------------------------------------(setq *load-verbose* t)(defconstant else t "Used for defaults in COND statements")(load "Macintosh HD:lisp:myload.fasl");; default pathnames for use by my-load;; Note: must add a dummy filename to avoid using directory's name ;;       as a filename in the pathname;; ---------------------------------------------------------------(defvar cl    (pathname "Macintosh HD:lisp:"))(defvar utils (pathname "Macintosh HD:lisp:utils:"))(defvar db    (pathname "Macintosh HD:lisp:db:"))(defvar dbs   (pathname "Macintosh HD:lisp:db:dbs:"))(defvar data  (pathname "Macintosh HD:lisp:db:data:"))(defvar pol   (pathname "Macintosh HD:lisp:pol:"))(defvar gen   (pathname "Macintosh HD:lisp:gen:"))(defvar test  (pathname "Macintosh HD:lisp:test:"));; mac specific stuff(my-load utils "mcl-utils")  ;; compiled OK(my-load cl "load_utils")